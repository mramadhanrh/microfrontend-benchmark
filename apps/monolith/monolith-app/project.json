{
  "name": "monolith-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/monolith/monolith-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/monolith/monolith-app",
        "index": "apps/monolith/monolith-app/src/index.html",
        "baseHref": "/",
        "main": "apps/monolith/monolith-app/src/main.tsx",
        "tsConfig": "apps/monolith/monolith-app/tsconfig.app.json",
        "assets": [
          "apps/monolith/monolith-app/src/favicon.ico",
          "apps/monolith/monolith-app/src/assets"
        ],
        "styles": ["apps/monolith/monolith-app/src/styles.css"],
        "webpackConfig": "apps/monolith/monolith-app/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "monolith-app:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "monolith-app:build:development"
        },
        "production": {
          "buildTarget": "monolith-app:build:production",
          "hmr": false
        }
      }
    }
  }
}
